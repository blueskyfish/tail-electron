{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "charset": "true",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "frontend",
    "**/*.spec.ts"
  ],
  "include": [
    "**/*.ts"
  ]
}
